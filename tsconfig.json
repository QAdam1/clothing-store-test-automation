{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JavaScript target
    "module": "CommonJS",                      // Node.js-compatible module system
    "lib": ["ES2020", "DOM"],                  // Support for modern JavaScript and browser APIs
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Enable interop between CommonJS and ES Modules
    "moduleResolution": "node",               // Resolve modules as Node.js does
    "resolveJsonModule": true,                 // Allow importing .json files
    "isolatedModules": true,                   // Ensure files are compiled independently
    "types": ["node", "@playwright/test"],     // Include Node.js and Playwright types
    "allowJs": true,                           // Allow JavaScript files
    "noImplicitAny": true,                     // Raise error on variables with implicit 'any' type
    "skipLibCheck": true,                      // Skip type checking of declaration files for faster builds
    "outDir": "dist",                          // Output directory for compiled files
    "rootDir": "./src"                         // Root directory of your source files
  },
  "include": [
    "src/**/*.ts",                             // Include all TypeScript files in src directory
    "tests/**/*.ts"                            // Include test files in tests directory
  ],
  "exclude": [
    "node_modules",                            // Exclude dependencies
    "dist"                                     // Exclude compiled output
  ]
}
